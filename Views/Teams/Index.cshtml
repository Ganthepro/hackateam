<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Team</title>
    @* Page Style *@
    <link rel="stylesheet" href="~/css/teamlist.css" asp-append-version="true" />
    @* Components Style *@
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/wave-grid-background.css" asp-append-version="true" />
</head>
<body>
    @* Wave Grid Background *@
    <div class="grid-container">
        <div class="grid"></div>
        <div class="brightness-pulse"></div>
        <div class="glow-effect"></div>
    </div>

    @* Navbar Component *@
    <nav class="navbar">
        <div class="navbar-title">Hackateam</div>
        <div class="navbar-links">
            <a asp-controller="Home">Home</a>
            <a asp-controller="Explore">Explore</a>
            <a asp-controller="Teams">Team</a>
            <a asp-controller="Notifications">Notification</a>
            <a asp-controller="Profile">Profile</a>
        </div>
        <img src="~/pictures/dropdown-menu-icon.svg" alt="dropdown-menu" class="dropdown-menu"/>
    </nav>

    @* Content Page *@
    <div class="team-content">
        <h1 class="team-header">
            Hosted and Pending Team
        </h1>
        <div class="team-list-content" id="hosted-Team">
            <h2>Hosted Team</h2>
            <div class="team-cards" id="hosted-teams">
                @* create cards *@
            </div>
            <div class="pagination-container" id="hosted-pagination"></div>
        </div>
        <div class="team-list-content" id="pending-Team">
            <h2>Pending Team</h2>
            <div class="team-cards" id="pending-teams">
                @* create cards *@
            </div>
            <div class="pagination-container" id="pending-pagination"></div>
        </div>
    </div>

    @* Footer Component *@
    <footer>
        <div class="footer-content-01">
            <p>Â© 2025 Hackateam</p>
            <div class="footer-link">
                <img src="~/pictures/github-icon.svg" alt="github-icon" />
                <a href="#">Hackateam repository</a>
            </div>
            <div class="footer-link">
                <img src="~/pictures/instagram-icon.svg" alt="instagram-icon" />
                <a href="#">SAIG Instagram</a>
            </div>
        </div>
        <div class="footer-content-02">
            <p>KMITL Computer Engineering</p>
            <div class="footer-logo">
                <img src="~/pictures/KMITL-logo.svg" alt="KMITL-logo">
                <img src="~/pictures/CE-logo.svg" alt="KMITL-logo">
            </div>
        </div>
    </footer>

    <script src="~/js/navbar.js"></script>
    <script type="module" src="~/js/Team.js"></script>
    <script src="~/js/cookie.js" asp-append-version="true"></script>
    <script src="~/js/authentication.js" asp-append-version="true"></script>
    <script src="~/js/wave-grid-background.js" asp-append-version="true"></script>
</body>
</html>