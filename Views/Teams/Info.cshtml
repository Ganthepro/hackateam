@{
    ViewData["Title"] = "TeamInfo";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TeamInfo</title>
    <link rel="stylesheet" href="~/css/team-info.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/checkbox-input.css" asp-append-version="true" />
</head>
<body>
    <div id="teamId" data-id="@ViewBag.Id"></div>
    
    <nav class="navbar">
        <div class="navbar-title">Hackateam</div>
        <div class="navbar-links">
            <a asp-controller="Explore" asp-action="Index">Explore</a>
            <a asp-controller="Teams" asp-action="Index">Team</a>
            <a asp-controller="Notifications" asp-action="Index">Notification</a>
            <a asp-controller="Profile" asp-action="Index">Profile</a>
        </div>
        <img src="~/pictures/dropdown-menu-icon.svg" alt="dropdown-menu" class="dropdown-menu"/>
    </nav>

    <div class="team-info-content">
        <div class="team-info-container">
            <div class="team-info-detail">
                <h1 id="name"></h1>
                <div class="team-banner-container">
                    <img 
                        alt="banner"
                        class="team-banner"
                        id="teamImage"
                    >
                </div>
                <div class="detail-group">
                    <label for="hackathonName">Hackathon Name</label>
                    <p id="hackathonName"></d>
                </div>
                <div class="detail-group">
                    <label for="hackathonDescription">Description</label>
                    <p id="hackathonDescription"></p>
                </div>
                <div class="detail-group">
                    <label for="leadResponse">Lead</label>
                    <p id="leadResponse"></p>
                </div>
                <div class="detail-group">
                    <label for="maxSize">Max Team Size</label>
                    <p id="maxSize"></p>
                </div>
                <div class="detail-group">
                    <label for="expiredAt">Expire Date</label>
                    <p id="expiredAt"></p>
                </div>
            </div>
            <form class="submission-form" onsubmit="event.preventDefault(); joinTeam(event);">
                <h2>State Of Purpose</h2>
                <textarea 
                    id="sop"
                    name="sop"
                    required>
                </textarea>
                <h2>Select Your Role</h2>
                <div class="requirements-display" id="requirements-display">
                    @* requirements-display  *@
                </div>
                <button type="submit" class="submit-btn">Join Team</button>
            </form>
        </div>
    </div>

    @* Footer Component *@
    <footer>
        <div class="footer-content-01">
            <p>Â© 2025 Hackateam</p>
            <div class="footer-link">
                <img src="~/pictures/github-icon.svg" alt="github-icon" />
                <a href="#">Hackateam repository</a>
            </div>
            <div class="footer-link">
                <img src="~/pictures/instagram-icon.svg" alt="instagram-icon" />
                <a href="#">SAIG Instagram</a>
            </div>
        </div>
        <div class="footer-content-02">
            <p>KMITL Computer Engineering</p>
            <div class="footer-logo">
                <img src="~/pictures/KMITL-logo.svg" alt="KMITL-logo">
                <img src="~/pictures/CE-logo.svg" alt="KMITL-logo">
            </div>
        </div>
    </footer>

    <script src="~/js/navbar.js"></script>
    <script src="~/js/alert.js" asp-append-version="true"></script>
    <script src="~/js/team-info.js" asp-append-version="true"></script>
    <script src="~/js/cookie.js" asp-append-version="true"></script>
    <script src="~/js/authentication.js" asp-append-version="true"></script>
</body>
</html>