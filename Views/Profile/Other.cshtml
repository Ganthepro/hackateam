@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Other</title>
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/file-input.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/effect-grid-background.css" asp-append-version="true" />
</head>
<body>
    @* Wave Grid Background *@
    <div class="grid-container" id="grid-container"></div>

    <nav class="navbar">
        <div class="navbar-title">Hackateam</div>
        <div class="navbar-links">
            <a asp-controller="Explore" asp-action="Index">Explore</a>
            <a asp-controller="Teams" asp-action="Index">Team</a>
            <a asp-controller="Notifications" asp-action="Index">Notification</a>
            <a asp-controller="Profile" asp-action="Index">Profile</a>
        </div>
        <img src="~/pictures/dropdown-menu-icon.svg" alt="dropdown-menu" class="dropdown-menu"/>
    </nav>

    <div id="userId" data-id="@ViewBag.Id"></div>

    <div class="profile-content">
        <h1>User Profile</h1>
        <section class="profile-container">
            <div class="profile-avatar-container">
                <img class="avatar-icon" alt="Avatar" id="avatar" />
                @* <div class="avatar-upload-container" id="avatar-upload-container" style="display: none;">
                    <div for="avatar-upload" class="file-input-space">
                        <div class="file-input-btn" aria-describedby="fileInputDesc">
                            <span class="file-btn">Choose file</span>
                            <span class="file-name" id="fileInputDesc">No file chosen</span>
                        </div>
                        <input 
                            type="file" class="file-input" 
                            id="avatar-upload" name="avatar"
                            accept="image/*" onchange="previewAvatar(event)"
                            aria-label="File upload"
                        >
                    </div>
                </div> *@
            </div>
            <div class="profile-details">
                <div class="profile-group">
                    <label for="fullName">Full Name</label>
                    <div class="profile-name">
                        <select name="header" id="headerSelect" disabled>
                            <option value="Mr.">Mr.</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Mrs.">Mrs.</option>
                        </select>
                        <input type="text" id="fullName" name="fullName" disabled>
                    </div>
                </div>
                <div class="profile-group">
                    <label for="tel">Phone</label>
                    <input type="text" id="tel" name="tel" disabled>
                </div>
                <div class="profile-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" disabled>
                </div>
            </div>
            @* <div class="action-buttons">
                <button class="edit-btn" id="editButton" onclick="startEditing()">Edit</button>
                <button class="save-btn" id="saveButton" onclick="saveProfile()" style="display: none;">Save</button>
                <button class="cancel-btn" id="cancelButton" onclick="cancelEditing()" style="display: none;">Cancel</button>
            </div> *@
        </section>

        <div class="project-content">
            <div class="project-wrapper">
                <h2>User Projects</h2>
                <div class="search-container">
                    <input 
                        type="text" 
                        id="skill" 
                        name="skill" 
                        autocomplete="off" 
                        placeholder="Search by skill or title..." 
                        list="skills" 
                        onkeydown="handleKeyPress(event)"
                    >
                    <datalist id="skills">
                        <!-- Skill options will be populated dynamically -->
                    </datalist>
                </div>
                @* <button class="add-btn" id="add-project" title="Create new project">Add Project</button> *@
                <button class="display-btn" id="loadMore" onclick="toggleShowMore()">Show All</button>
            </div>
            <div class="projects-list" id="projects-list">
                <!-- Projects will be rendered here -->
            </div>
        </div>

    </div>
    
    @* Footer Component *@
    <footer>
        <div class="footer-content-01">
            <p>Â© 2025 Hackateam</p>
            <div class="footer-link">
                <img src="~/pictures/github-icon.svg" alt="github-icon" />
                <a href="#">Hackateam repository</a>
            </div>

        </div>
        <div class="footer-content-02">
            <p>KMITL Computer Engineering</p>
            <div class="footer-logo">
                <img src="~/pictures/KMITL-logo.svg" alt="KMITL-logo">
                <img src="~/pictures/CE-logo.svg" alt="KMITL-logo">
            </div>
        </div>
    </footer>

    <script src="~/js/navbar.js"></script>
    <script src="~/js/alert.js" asp-append-version="true"></script>
    <script src="~/js/other.js" asp-append-version="true"></script>
    <script src="~/js/file-input.js" asp-append-version="true"></script>
    <script src="~/js/cookie.js" asp-append-version="true"></script>
    <script src="~/js/authentication.js" asp-append-version="true"></script>
    <script src="~/js/effect-grid-background.js" asp-append-version="true"></script>
</body>
</html>