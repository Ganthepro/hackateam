@{
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Profile</title>
</head>
<body>
    <header>
        <h1>My Profile</h1>
    </header>

    <main>
        <section id="profile">
            <img src="https://e7.pngegg.com/pngimages/84/165/png-clipart-united-states-avatar-organization-information-user-avatar-service-computer-wallpaper-thumbnail.png" alt="Avatar of Mr. John Doe" />
            <div id="profile-details">
                <p id="fullname"><strong>Fullname:</strong> Mr. John Doe</p>
                <p id="education"><strong>Education:</strong> Bachelor's Degree in Computer Engineering</p>
                <p id="tel"><strong>Tel:</strong> +123 456 7890</p>
                <p id="email"><strong>Email:</strong> johndoe@example.com</p>
            </div>
        </section>

        <section id="projects">
            <div id="showproject">
                <h2>Projects :</h2>
                <button id="load-more" class="toggle-btn">Show All</button>
            </div>
            <div class="projects-list">
            <article class="project">
                <h3>Mobile App Development</h3>
                <p><strong>Description:</strong> Develop Mobile App</p>
                <p><strong>Skills:</strong> Dart</p>
            </article>

            <article class="project">
                <h3>Web Development</h3>
                <p><strong>Description:</strong> Develop Website</p>
                <p><strong>Skills:</strong> HTML, CSS, JavaScript</p>
            </article>
            <article class="project">
                <h3>Mobile App Development</h3>
                <p><strong>Description:</strong> Develop Mobile App</p>
                <p><strong>Skills:</strong> Dart</p>
            </article>

            <article class="project">
                <h3>Web Development</h3>
                <p><strong>Description:</strong> Develop Website</p>
                <p><strong>Skills:</strong> HTML, CSS, JavaScript</p>
            </article>
            <article class="project">
                <h3>Mobile App Development</h3>
                <p><strong>Description:</strong> Develop Mobile App</p>
                <p><strong>Skills:</strong> Dart</p>
            </article>

            <article class="project">
                <h3>Web Development</h3>
                <p><strong>Description:</strong> Develop Website</p>
                <p><strong>Skills:</strong> HTML, CSS, JavaScript</p>
            </article>
            </div>
        </section>
    </main>

    <footer>
        <a asp-controller="Profile" asp-action="EditProfile">Go To Edit Profile</a>
        <a asp-controller="Profile" asp-action="EditProject">Go To Edit Project</a>
    </footer>
</body>
</html>