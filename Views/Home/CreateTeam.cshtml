<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CreateTeam</title>
    @* Page Style *@
    <link rel="stylesheet" href="~/css/create-team.css" asp-append-version="true" />
    @* Components Style *@
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
</head>
<body>
    @* Navbar Component *@
    <nav class="navbar">
        <div>Hackateam</div>
        <div class="navbar-links">
            <a asp-controller="Home" asp-action="Intro">Home</a>
            <a asp-controller="Home" asp-action="Explore">Explore</a>
            <a asp-controller="Home" asp-action="Team">Team</a>
            <a asp-controller="Home" asp-action="Notification">Notification</a>
            <a asp-controller="Home" asp-action="Profile">Profile</a>
        </div>
        <img src="~/pictures/dropdown-menu-icon.svg" alt="dropdown-menu" class="dropdown-menu"/>
    </nav>

    @* Content Page *@
    <div class="create-team-content">
        <form action="">
            <div class="create-team-form">
                <div class="create-team-form-header">
                    <h2>Create Team</h2>
                </div>
                <div class="create-team-form-body">
                    <div class="create-team-form-group">
                        <label for="team-name">Team Name</label>
                        <input 
                            type="text" 
                            id="team-name" 
                            name="team-name" 
                            placeholder="Enter team name"
                        >
                    </div>
                    <div class="create-team-form-group">
                        <label for="team-description">Description</label>
                        <input 
                            type="text" 
                            id="team-description" 
                            name="team-description" 
                            placeholder="Enter team description"
                        >
                    </div>
                    <div class="create-team-form-group">
                        <label for="team-image">Team Image</label>
                        <input 
                            type="file" 
                            id="team-image" 
                            name="team-image"
                        >
                    </div>
                    <div class="create-team-form-group">
                        <label for="hackathon-name">Hackathon Name</label>
                        <input 
                            type="text" 
                            id="hackathon-name" 
                            name="hackathon-name" 
                            placeholder="Enter hackathon name"
                        >
                    </div>
                    <div class="create-team-form-group">
                        <label for="hackathon-description">Hackathon Description</label>
                        <input 
                            type="text" 
                            id="hackathon-description" 
                            name="hackathon-description" 
                            placeholder="Enter hackathon description"
                        >
                    </div>
                    <div class="create-team-form-group">
                        <label for="member-requirement">Member Requirements</label>
                        <div class="requirements">

                        </div>
                    </div>
                    <div class="create-team-form-group">
                        <button type="submit">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @* Footer Component *@
    <footer>
        <div class="footer-content-01">
            <p>Â© 2025 Hackateam</p>
            <div class="footer-link">
                <img src="~/pictures/github-icon.svg" alt="github-icon" />
                <a href="#">Hackateam repository</a>
            </div>
            <div class="footer-link">
                <img src="~/pictures/instagram-icon.svg" alt="instagram-icon" />
                <a href="#">SAIG Instagram</a>
            </div>
        </div>
        <div class="footer-content-02">
            <p>KMITL Computer Engineering</p>
            <div class="footer-logo">
                <img src="~/pictures/KMITL-logo.svg" alt="KMITL-logo">
                <img src="~/pictures/CE-logo.svg" alt="KMITL-logo">
            </div>
        </div>
    </footer>

    <script type="module" src="~/js/create-team.js">
    // Get the requirements container
    const requirementsContainer = document.querySelector('.requirements');

    // Function to create a new requirement group
    function createRequirementGroup() {
        const groupDiv = document.createElement('div');
        groupDiv.className = 'member-requirement-group-container';
        
        groupDiv.innerHTML = `
            <div class="member-requirement-group">
                <label for="member-role">Role</label>
                <input 
                    type="text" 
                    name="member-role[]" 
                    placeholder="Enter member role"
                >
            </div>
            <div class="member-requirement-group">
                <label for="member-quantity">Quantity</label>
                <input 
                    type="number" 
                    name="member-quantity[]" 
                    placeholder="Enter member quantity"
                >
            </div>
            <button type="button" class="delete-requirement-btn">Delete</button>
        `;

        // Add delete button functionality
        const deleteButton = groupDiv.querySelector('.delete-requirement-btn');
        deleteButton.addEventListener('click', () => {
            groupDiv.remove();
        });

        return groupDiv;
    }

    // Add "Add Requirement" button after the requirements container
    const addButton = document.createElement('button');
    addButton.type = 'button';
    addButton.className = 'add-requirement-btn';
    addButton.textContent = 'Add Requirement';
    requirementsContainer.parentNode.insertBefore(addButton, requirementsContainer.nextSibling);

    // Add click event listener to the Add button
    addButton.addEventListener('click', () => {
        const newGroup = createRequirementGroup();
        requirementsContainer.appendChild(newGroup);
    });

    // Initialize with one requirement group
    document.addEventListener('DOMContentLoaded', () => {
        const initialGroup = createRequirementGroup();
        requirementsContainer.appendChild(initialGroup);
    });
    </script>
</body>
</html>