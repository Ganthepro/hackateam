<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
      <title>@ViewData["Title"] - Register</title>
</head>
<body>
      <section>
            <h1>Register</h1>
            <form id="register" onsubmit="event.preventDefault(); Register();">
                  <label for="header">Header</label>
                  <select id="header" name="header" required>
                        <option value="">Select</option>
                        <option value="Mr.">Mr.</option>
                        <option value="Mrs.">Mrs.</option>
                        <option value="Ms.">Ms.</option>
                  </select>

                  <label for="fullName">FullName</label>
                  <input type="text" id="fullName" name="fullName" required />

                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" required />

                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" required />

                  <label for="tel">Tel</label>
                  <input type="tel" id="tel" name="tel" required />

                  <div class="submit">
                        <button type="submit">Register</button>
                  </div>
                  
            </form>
      </section>
      <footer>
            Already Have Account ? 
            <a asp-controller="Home" asp-action="Login">Login</a>
      </footer>
      <script src="~/js/cookie.js" asp-append-version="true"></script>
      <script src="~/js/alertError.js" asp-append-version="true"></script>
      <script src="~/js/register.js" asp-append-version="true"></script>
</body>
</html>

