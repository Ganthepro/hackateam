<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @* <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" >
    <link rel="stylesheet" href="~/css/effect-grid-background.css" asp-append-version="true" >
    <title>@ViewData["Title"] - Login</title>
</head>
<body>
    <div class="grid-container" id="grid-container"></div>
    <div class="auth-container">
        <section>
            <h1>Login</h1>
            <form id="login" onsubmit="event.preventDefault(); Login();">
                <div class="input-field">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required />
                </div>
                <div class="input-field">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <button type="submit" class="submit-btn">sign in</button>
            </form>
            <div class="auth-link">
                <p>Don't have an account ?</p>
                <a asp-controller="Home" asp-action="Register">Register</a>
            </div>
        </section>
    </div>

    <script src="~/js/cookie.js" asp-append-version="true"></script>
    <script src="~/js/alertError.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/effect-grid-background.js" asp-append-version="true"></script>
</body>
</html>

